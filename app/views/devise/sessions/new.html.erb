<% if flash[:alert] %>
  <div class="text-danger mb-3" style=" width:25rem; margin:0 auto;"><%= flash[:alert] %></div>
<% end %>
<div class="card shadow-lg border-0" style="width:25rem; height:25rem; margin:0 auto;">
<div class="card-body">
<h2 class="text-center">Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class:"mb-1" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"form-control" %>
  </div>

  <div class="field mt-3">
    <%= f.label :password, class:"mb-1" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mt-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions mt-3 text-center mb-3 d-grid gap-2">
    <%= f.submit "Log in" , class:"btn btn-dark" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<div>
</div>