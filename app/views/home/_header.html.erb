<style>
.custom-icon {
    font-size: 23px;
    color: green;
    /* margin-left: 2px; */
 }
</style>
<header>
    <div class="px-3 py-2 bg-dark text-white">
      <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
          <a href="/" class="d-flex align-items-center my-2 my-lg-0 me-lg-auto text-white text-decoration-none">
            <i class="bi bi-clouds display-6 me-2"></i>
            <b class="display-6">Cloud Market Place</b>
          </a>

          <ul class="nav col-12 col-lg-auto my-2 justify-content-center my-md-0 text-small">
            <li>
              <a href="#" class="nav-link text-secondary">
                <i class="bi bi-house-door custom-icon"></i>
                Home
              </a>
            </li>
            <li class="d-flex">
            <%= link_to about_path, class: "nav-link text-success d-flex align-items-center" do %>
                <i class="bi bi-clipboard-minus custom-icon"></i>
                <span class="ms-1">About</span>
            <% end %>
            </li>
            <li class="d-flex">
            <% if user_signed_in? %>
              <% if current_user.id == 2 %>
                <%= link_to contect_list_path, class: "nav-link text-success d-flex align-items-center" do %>
                    <i class="bi bi-envelope custom-icon"></i>
                    <span class="ms-1">Messages</span>
                  </a>
                <% end %>
              <% else %> 
                <%= link_to new_contect_path, class: "nav-link text-success d-flex align-items-center" do %>
                    <i class="bi bi-envelope custom-icon"></i>
                    <span class="ms-1">Contect</span>
                  </a>
                <% end %> 
              <% end %>
            <% else %>  
                <%= link_to new_contect_path, class: "nav-link text-success d-flex align-items-center" do %>
                    <i class="bi bi-envelope custom-icon"></i>
                    <span class="ms-1">Contect</span>
                  </a>
                <% end %>
            <% end %>  
            </li>
            <% if user_signed_in? %>
              <% if current_user.id == 2%>
                <li class="d-flex">
                  <%= link_to user_list_path, class: "nav-link text-success d-flex align-items-center" do %>
                    <i class="bi bi-person custom-icon"></i>
                    <span class="ms-1">Users</span> 
                  <% end %>  
                </li>
              <% end %>
            <% end %>
            <li class="d-flex">
            <%= link_to documention_path, class: "nav-link text-success d-flex align-items-center" do %>
                <i class="bi bi-file-richtext custom-icon"></i>
                <span class="ms-1">Docs</span> 
            <% end %>  
            </li>
            <li class="d-flex">
            <%= link_to services_path, class: "nav-link text-success d-flex align-items-center" do %>
                <i class="bi bi-gear custom-icon"></i>
                <span class="ms-1">Service</span>  
            </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
 <div class="container d-flex justify-content-end">            
    <div class="mt-3">
      <% if user_signed_in? %>
        
        <%= button_to 'Log-out', destroy_user_session_path, method: :delete, class:"btn btn btn btn-outline-success" %>
      <% else %>
        <%= link_to 'Login', user_session_path , class:"btn btn-outline-success me-3 pb-1 pt-1" %>
        <%= link_to 'Sign-up', new_user_registration_path, class: "btn btn-outline-success pb-1 pt-1" %>
      <% end %>  
    </div>
</div>

</header>